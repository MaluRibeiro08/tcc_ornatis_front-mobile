<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".PrestadorCadastroPerfilEstabelecimento">

    <include
        android:id="@+id/include"
        layout="@layout/topbar" />

    <TextView
        android:id="@+id/tv_perfil_estabelecimento"
        style="@style/textViewTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/formato_card_titulo_cadastro"
        android:drawableStart="@drawable/ic_estabelecimento_24"
        android:text="  Perfil Estabelecimento"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:id="@+id/container_1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_perfil_estabelecimento"
        android:visibility="visible">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toTopOf="@+id/bottom_navigation"
            app:layout_constraintTop_toBottomOf="@+id/tv_perfil_estabelecimento"
            app:layout_constraintVertical_bias="1.0"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="45dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="45dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_nome_do_negocio"
                    style="@style/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/nome_negocio" />

                <EditText
                    android:id="@+id/et_nome_do_negocio"
                    style="@style/editText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text" />


                <TextView
                    android:id="@+id/tv_cnpj"
                    style="@style/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/cnpj" />

                <EditText
                    android:id="@+id/et_cnpj"
                    style="@style/editText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number" />


                <TextView
                    android:id="@+id/tv_contato"
                    style="@style/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/contato" />

                <EditText
                    android:id="@+id/et_contato"
                    style="@style/editText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="phone" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Telefone com WhatsApp"
                    android:textSize="10dp" />


                <TextView
                    android:id="@+id/tv_logo"
                    style="@style/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/logo" />


                <!--            <ImageView-->
                <!--                android:id="@+id/iv_foto_perfil"-->
                <!--                android:layout_width="wrap_content"-->
                <!--                android:layout_height="wrap_content"-->
                <!--                android:layout_gravity="center"-->
                <!--                android:src="@drawable/ic_profile" />-->

                <androidx.cardview.widget.CardView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    app:cardBackgroundColor="#ff0000"
                    app:cardCornerRadius="60dp">

                    <ImageView
                        android:id="@+id/iv_dash_foto_perfil"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/profile" />

                </androidx.cardview.widget.CardView>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:text="@string/opicional"
                    android:textSize="10dp" />

                <TextView
                    android:id="@+id/tv_biografia"
                    style="@style/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/biografia" />


                <EditText
                    android:id="@+id/et_biografia"
                    style="@style/editText"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="50dp"
                    android:background="@drawable/formato_edit_text"
                    android:gravity="top"
                    android:hint="Insira uma biografia"
                    android:inputType="textMultiLine"
                    android:padding="10dp"
                    android:scrollbars="vertical"
                    android:scrollHorizontally="false"
                    android:textSize="13dp" />

                //SETAS BACK E FORWARD
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="60dp">

                    <TextView
                        android:id="@+id/arrow_back"
                        android:layout_width="21dp"
                        android:layout_height="21dp"
                        android:drawableStart="@drawable/ic_arrow_back_24" />

                    <!--            <RelativeLayout-->
                    <!--                android:layout_width="match_parent"-->
                    <!--                android:layout_height="wrap_content"-->
                    <!--                android:layout_alignParentEnd="true">-->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/page1"
                            android:layout_width="5dp"
                            android:layout_height="5dp"
                            android:layout_margin="5dp"
                            android:src="@drawable/ic_ellipse" />

                        <ImageView
                            android:id="@+id/page2"
                            android:layout_width="5dp"
                            android:layout_height="5dp"
                            android:layout_margin="5dp"
                            android:src="@drawable/ic_ellipse"
                            app:tint="@color/cinza_padrao" />

                        <ImageView
                            android:id="@+id/page3"
                            android:layout_width="5dp"
                            android:layout_height="5dp"
                            android:layout_margin="5dp"
                            android:src="@drawable/ic_ellipse"
                            app:tint="@color/cinza_padrao" />

                        <ImageView
                            android:id="@+id/page4"
                            android:layout_width="5dp"
                            android:layout_height="5dp"
                            android:layout_margin="5dp"
                            android:src="@drawable/ic_ellipse"
                            app:tint="@color/cinza_padrao" />

                        <ImageView
                            android:id="@+id/page5"
                            android:layout_width="5dp"
                            android:layout_height="5dp"
                            android:layout_margin="5dp"
                            android:src="@drawable/ic_ellipse"
                            app:tint="@color/cinza_padrao" />

                        <ImageView
                            android:id="@+id/page6"
                            android:layout_width="5dp"
                            android:layout_height="5dp"
                            android:layout_margin="5dp"
                            android:src="@drawable/ic_ellipse"
                            app:tint="@color/cinza_padrao" />

                        <ImageView
                            android:id="@+id/page7"
                            android:layout_width="5dp"
                            android:layout_height="5dp"
                            android:layout_margin="5dp"
                            android:src="@drawable/ic_ellipse"
                            app:tint="@color/cinza_padrao" />


                    </LinearLayout>


                    <!--            </RelativeLayout>-->


                    <TextView
                        android:id="@+id/arrow_forward"
                        android:layout_width="21dp"
                        android:layout_height="21dp"
                        android:layout_alignParentEnd="true"
                        android:drawableStart="@drawable/ic_arrow_forward_24" />

                </RelativeLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>




    <LinearLayout
        android:id="@+id/container_2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_perfil_estabelecimento">


    </LinearLayout>





    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="402dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:labelVisibilityMode="unlabeled"
        app:menu="@menu/bottom_navigation_sem_cadastro"/>

</androidx.constraintlayout.widget.ConstraintLayout>
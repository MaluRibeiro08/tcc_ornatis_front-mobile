<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="350dp"
    android:layout_height="match_parent"
    android:background="@drawable/formato_retangulo_verde"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="139dp"
            android:layout_marginTop="40dp"
            android:layout_marginStart="20dp">

            <androidx.cardview.widget.CardView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="30dp"
                app:cardBackgroundColor="#ff0000"
                app:cardCornerRadius="60dp">

                <ImageView
                    android:id="@+id/iv_dash_foto_perfil"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/profile" />

            </androidx.cardview.widget.CardView>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Meu Perfil"
                    android:textColor="@color/white"
                    android:textSize="24dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">

                    <ImageView
                        android:id="@+id/iv_notificacoes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:src="@drawable/ic_estabelecimento_24" />

                    <ImageView
                        android:id="@+id/iv_engrenagem"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="40dp"
                        android:src="@drawable/ic_estabelecimento_24" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:baselineAligned="false"
        android:src="@drawable/ic_line_165" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginStart="40dp"
            android:layout_marginTop="15dp">

            <TextView
                android:id="@+id/tv_historico"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/historico"
                android:textColor="@color/white"
                android:layout_marginTop="20dp"
                style="@style/textViewMenu"/>

            <TextView
                android:id="@+id/tv_sobreapp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sobreApp"
                android:textColor="@color/white"
                android:layout_marginTop="30dp"
                style="@style/textViewMenu"/>

            <TextView
                android:id="@+id/tv_duvidas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/duvidas"
                android:textColor="@color/white"
                android:layout_marginTop="30dp"
                style="@style/textViewMenu"/>

            <TextView
                android:id="@+id/tv_servicos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/servicos"
                android:textColor="@color/white"
                android:layout_marginTop="30dp"
                style="@style/textViewMenu"/>

            <TextView
                android:id="@+id/tv_agendamentos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/agendamentos"
                android:textColor="@color/white"
                android:layout_marginTop="30dp"
                style="@style/textViewMenu"/>

            <TextView
                android:id="@+id/tv_produtos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/produtos"
                android:textColor="@color/white"
                android:layout_marginTop="30dp"
                style="@style/textViewMenu"/>

            <TextView
                android:id="@+id/tv_estatistica"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/estatistica"
                android:textColor="@color/white"
                android:layout_marginTop="30dp"
                style="@style/textViewMenu"/>


            <TextView
                android:id="@+id/tv_sair_conta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sair"
                android:textColor="@color/white"
                android:layout_marginTop="30dp"
                style="@style/textViewMenu"/>
        </LinearLayout>

    </ScrollView>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PrestadorCadastroFuncionamento">

    <include
        android:id="@+id/include7"
        layout="@layout/topbar" />

    <TextView
        android:id="@+id/tv_funcionamento"
        style="@style/textViewTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/formato_card_titulo_cadastro"
        android:drawableStart="@drawable/ic_regras_negocio"
        android:text="  Funcionamento"
        app:layout_constraintTop_toBottomOf="@+id/include7"
        tools:layout_editor_absoluteX="0dp"
        tools:ignore="MissingConstraints" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_funcionamento">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="45dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="45dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_nome_do_negocio"
                style="@style/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Quais dias da semana o estabelecimento funciona?" />


<!--            <RelativeLayout-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="match_parent">-->

                <CheckBox
                    android:id="@+id/cb_domingo"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:text="Domingo"
                    android:textSize="13sp" />

<!--                <EditText-->
<!--                    android:layout_width="20dp"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_alignRight="@id/cb_domingo"-->
<!--                    android:layout_alignParentEnd="true"-->
<!--                    android:layout_marginEnd="238dp"-->
<!--                    android:layout_marginRight="-43dp" />-->

                <CheckBox
                    android:id="@+id/cb_segunda"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:text="Segunda"
                    android:textSize="13sp" />

                <CheckBox
                    android:id="@+id/cb_terca"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:text="Terça"
                    android:textSize="13sp" />

                <CheckBox
                    android:id="@+id/cb_quarta"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:text="Quarta"
                    android:textSize="13sp" />

                <CheckBox
                    android:id="@+id/cb_quinta"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:text="Quinta"
                    android:textSize="13sp" />

                <CheckBox
                    android:id="@+id/cb_sexta"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:text="Sexta"
                    android:textSize="13sp" />

                <CheckBox
                    android:id="@+id/cb_sabado"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:text="Sábado"
                    android:textSize="13sp" />


<!--            </RelativeLayout>-->

            <TextView
                style="@style/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tempo de intervalo entre os horários?" />


            <RadioButton
                android:id="@+id/rb_sim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sim"/>

            <RadioButton
                android:id="@+id/rb_nao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Não"/>

            <TextView
                style="@style/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Quantos minutos?" />

            <EditText
                android:id="@+id/et_minutos_intervalo"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:background="@drawable/formato_edit_text"
                android:hint="Ex.: (10 min)"
                android:textSize="10dp"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                style="@style/editText"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="90dp">

                <TextView
                    android:id="@+id/arrow_back"
                    android:layout_width="21dp"
                    android:layout_height="21dp"
                    android:drawableStart="@drawable/ic_arrow_back_24" />

                <!--            <RelativeLayout-->
                <!--                android:layout_width="match_parent"-->
                <!--                android:layout_height="wrap_content"-->
                <!--                android:layout_alignParentEnd="true">-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/page1"
                        android:layout_width="5dp"
                        android:layout_height="5dp"
                        android:layout_margin="5dp"
                        android:src="@drawable/ic_ellipse" />

                    <ImageView
                        android:id="@+id/page2"
                        android:layout_width="5dp"
                        android:layout_height="5dp"
                        android:layout_margin="5dp"
                        android:src="@drawable/ic_ellipse"
                        app:tint="@color/cinza_padrao" />

                    <ImageView
                        android:id="@+id/page3"
                        android:layout_width="5dp"
                        android:layout_height="5dp"
                        android:layout_margin="5dp"
                        android:src="@drawable/ic_ellipse"
                        app:tint="@color/cinza_padrao" />

                    <ImageView
                        android:id="@+id/page4"
                        android:layout_width="5dp"
                        android:layout_height="5dp"
                        android:layout_margin="5dp"
                        android:src="@drawable/ic_ellipse"
                        app:tint="@color/cinza_padrao" />

                    <ImageView
                        android:id="@+id/page5"
                        android:layout_width="5dp"
                        android:layout_height="5dp"
                        android:layout_margin="5dp"
                        android:src="@drawable/ic_ellipse"
                        app:tint="@color/cinza_padrao" />

                    <ImageView
                        android:id="@+id/page6"
                        android:layout_width="5dp"
                        android:layout_height="5dp"
                        android:layout_margin="5dp"
                        android:src="@drawable/ic_ellipse"
                        app:tint="@color/cinza_padrao" />

                    <ImageView
                        android:id="@+id/page7"
                        android:layout_width="5dp"
                        android:layout_height="5dp"
                        android:layout_margin="5dp"
                        android:src="@drawable/ic_ellipse"
                        app:tint="@color/cinza_padrao" />


                </LinearLayout>


                <!--            </RelativeLayout>-->


                <TextView
                    android:id="@+id/arrow_forward"
                    android:layout_width="21dp"
                    android:layout_height="21dp"
                    android:layout_alignParentEnd="true"
                    android:drawableStart="@drawable/ic_arrow_forward_24" />


            </RelativeLayout>


        </LinearLayout>

    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="402dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:labelVisibilityMode="unlabeled"
        app:menu="@menu/bottom_navigation_sem_cadastro"/>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.conta_administradora.funcionario.PrestadorCadastrarFuncionario"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@drawable/formato_retangulo_curvado_cinza"
        android:text="@string/editarFuncionario"
        style="@style/textViewTituloCadastroFuncionario"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <androidx.cardview.widget.CardView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                app:cardBackgroundColor="#ff0000"
                app:cardCornerRadius="60dp"
                android:layout_marginTop="30dp">

                <ImageView
                    android:id="@+id/iv_foto_perfil_funcionario"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/profile" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/opicional"
                android:layout_gravity="center"/>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="45dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:layout_marginEnd="45dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_nome_do_funcionario"
                    style="@style/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/nome" />

                <EditText
                    android:id="@+id/et_nome_do_funcionario"
                    style="@style/editText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text" />

                <TextView
                    android:id="@+id/tv_login_acesso"
                    style="@style/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/login" />

                <EditText
                    android:id="@+id/et_login_acesso"
                    style="@style/editText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text" />

                <TextView
                    android:id="@+id/tv_senha"
                    style="@style/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/senha" />

                <EditText
                    android:id="@+id/et_senha"
                    style="@style/editText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword" />


                <TextView
                    android:id="@+id/tv_jornada_trabalho"
                    style="@style/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Jornada de trabalho" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="40dp"
                    android:layout_gravity="center">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <CheckBox
                            android:id="@+id/cb_domingo"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_marginTop="10dp"
                            android:text="Domingo"
                            android:textSize="13sp" />

                        <!--                <EditText-->
                        <!--                    android:layout_width="20dp"-->
                        <!--                    android:layout_height="wrap_content"-->
                        <!--                    android:layout_alignRight="@id/cb_domingo"-->
                        <!--                    android:layout_alignParentEnd="true"-->
                        <!--                    android:layout_marginEnd="238dp"-->
                        <!--                    android:layout_marginRight="-43dp" />-->

                        <CheckBox
                            android:id="@+id/cb_segunda"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_marginTop="10dp"
                            android:text="Segunda"
                            android:textSize="13sp" />

                        <CheckBox
                            android:id="@+id/cb_terca"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_marginTop="10dp"
                            android:text="Terça"
                            android:textSize="13sp" />

                        <CheckBox
                            android:id="@+id/cb_quarta"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_marginTop="10dp"
                            android:text="Quarta"
                            android:textSize="13sp" />

                        <CheckBox
                            android:id="@+id/cb_quinta"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_marginTop="10dp"
                            android:text="Quinta"
                            android:textSize="13sp" />

                        <CheckBox
                            android:id="@+id/cb_sexta"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_marginTop="10dp"
                            android:text="Sexta"
                            android:textSize="13sp" />

                        <CheckBox
                            android:id="@+id/cb_sabado"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_marginTop="10dp"
                            android:text="Sábado"
                            android:textSize="13sp" />


                    </LinearLayout>

                    <LinearLayout

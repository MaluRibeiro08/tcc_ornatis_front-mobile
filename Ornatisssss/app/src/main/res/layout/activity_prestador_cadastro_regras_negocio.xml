<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PrestadorCadastroRegrasNegocio">

    <include
        android:id="@+id/include5"
        layout="@layout/topbar" />

    <TextView
        android:id="@+id/tv_regras_negocio"
        style="@style/textViewTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/formato_card_titulo_cadastro"
        android:drawableStart="@drawable/ic_regras_negocio"
        android:text="  Regras de negócio"
        app:layout_constraintTop_toBottomOf="@+id/include5"
        tools:ignore="MissingConstraints" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_regras_negocio"
        app:layout_constraintBottom_toTopOf="@+id/bottom_navigation"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="559dp"
            android:layout_marginStart="45dp"
            android:layout_marginEnd="45dp"
            android:orientation="vertical">




            <TextView
                android:id="@+id/tv_tipo_recebimento"
                style="@style/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Terá taxa de cancelamento?" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/rb_cancelamento_sim"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sim" />

                <RadioButton
                    android:id="@+id/rb_cancelamento_nao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Não"
                    android:layout_marginStart="45dp"/>
            </LinearLayout>



            <TextView
                style="@style/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Configuração das taxas" />

            <RadioButton
                android:id="@+id/rb_taxa_unica"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Taxa Única" />

            <EditText
                android:id="@+id/et_taxa_unica"
                android:layout_width="100dp"
                android:layout_height="35dp"
                style="@style/editText"
                android:background="@drawable/formato_edit_text"
                android:hint="Ex.:(10,00)"
                android:padding="10dp"
                android:textSize="10dp" />

            <RadioButton
                android:id="@+id/rb_personalizada"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Personalizada" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/formato_edit_text"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Valores do Serviço:"/>

                //colocar o icone de lixeira mesmo???

                <RadioButton
                    android:id="@+id/rb_abaixo_cem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Abaixo de R$ 100,00" />

                <RadioButton
                    android:id="@+id/rb_acima_cem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Acima de R$ 100,00" />


                <TextView
                    android:id="@+id/tv_tolerancia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tolerância: de antecedência" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Taxa sobre o valor do serviço: 5 (editavel) %" />



            </LinearLayout>

            <!--            <RelativeLayout-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="match_parent">-->



            <!--                <EditText-->
            <!--                    android:id="@+id/et_horas_tolerancia"-->
            <!--                    android:layout_width="wrap_content"-->
            <!--                    android:layout_height="wrap_content"-->
            <!--                    android:layout_alignRight="@id/tv_tolerancia"-->
            <!--                    android:layout_alignBottom="@+id/tv_tolerancia"-->
            <!--                    android:layout_marginStart="-20dp"-->
            <!--                    android:layout_marginBottom="-26dp"-->
            <!--                    android:layout_toEndOf="@+id/tv_tolerancia"-->
            <!--                    android:textSize="10d" />-->


            <!--            </RelativeLayout>-->


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_marginTop="90dp">

                <TextView
                    android:id="@+id/arrow_back"
                    android:layout_width="21dp"
                    android:layout_height="21dp"
                    android:drawableStart="@drawable/ic_arrow_back_24" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="5dp"
                        android:layout_height="5dp"
                        android:layout_margin="5dp"
                        android:src="@drawable/ic_ellipse"
                        app:tint="@color/cinza_padrao" />

                    <ImageView
                        android:layout_width="5dp"
                        android:layout_height="5dp"
                        android:layout_margin="5dp"
                        android:src="@drawable/ic_ellipse"
                        app:tint="@color/cinza_padrao" />

                    <ImageView
                        android:layout_width="5dp"
                        android:layout_height="5dp"
                        android:layout_margin="5dp"
                        android:src="@drawable/ic_ellipse" />

                    <ImageView
                        android:layout_width="5dp"
                        android:layout_height="5dp"
                        android:layout_margin="5dp"
                        android:src="@drawable/ic_ellipse"
                        app:tint="@color/cinza_padrao" />

                    <ImageView
                        android:layout_width="5dp"
                        android:layout_height="5dp"
                        android:layout_margin="5dp"
                        android:src="@drawable/ic_ellipse"
                        app:tint="@color/cinza_padrao" />

                    <ImageView
                        android:layout_width="5dp"
                        android:layout_height="5dp"
                        android:layout_margin="5dp"
                        android:src="@drawable/ic_ellipse"
                        app:tint="@color/cinza_padrao" />

                    <ImageView
                        android:layout_width="5dp"
                        android:layout_height="5dp"
                        android:layout_margin="5dp"
                        android:src="@drawable/ic_ellipse"
                        app:tint="@color/cinza_padrao" />

                </LinearLayout>

                <TextView
                    android:id="@+id/arrow_forward"
                    android:layout_width="21dp"
                    android:layout_height="21dp"
                    android:layout_alignParentEnd="true"
                    android:drawableStart="@drawable/ic_arrow_forward_24" />


            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="402dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:labelVisibilityMode="unlabeled"
        app:menu="@menu/bottom_navigation"/>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.conta_administradora.HomePrestador"
    android:orientation="vertical">

    <!--    <include layout="@layout/topbar"/>-->


    <include
        android:id="@+id/include_topbar"
        layout="@layout/topbar" />

    <include
        layout="@layout/menu_deslizante"
        android:visibility="gone"/>

    //CARD DIZENDO SE É PRESTADOR OU USUÁRIO


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="45dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_login_consumidor"
            style="@style/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/login" />

        <EditText
            android:id="@+id/et_login_consumidor"
            style="@style/editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text" />

        <TextView
            android:id="@+id/tv_senha_consumidor"
            style="@style/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/senha" />

        <EditText
            android:id="@+id/et_Senha_consumidor"
            style="@style/editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword" />


        <TextView
            android:id="@+id/esqueci_senha_prestador"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Esqueci minha senha"
            android:textColor="@color/verde_escuro"
            android:layout_marginTop="30dp"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/nao_tem_cadastro_prestador"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Não tenho cadastro!"
            android:layout_marginTop="15dp"
            android:textStyle="italic"
            android:textSize="12sp"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="60dp">

        <Button
            android:id="@+id/btn_fazer_login"
            android:layout_width="168dp"
            android:layout_height="50dp"
            android:text="Entrar"
            android:layout_marginStart="20dp"/>

    </LinearLayout>



    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="402dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:labelVisibilityMode="unlabeled"
        app:menu="@menu/prestador_bottom_navigation_cadastrado"/>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".PrestadorCadastroPerfilEstabelecimento"
    android:orientation="vertical">

    <include
        android:id="@+id/include_topbar"
        layout="@layout/topbar" />

    <LinearLayout
        android:id="@+id/container1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="70dp"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_perfil_estabelecimento"
            style="@style/textViewTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/formato_card_titulo_cadastro"
            android:drawableStart="@drawable/ic_estabelecimento_24"
            android:text="  Perfil Estabelecimento"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/include_topbar"
            tools:ignore="MissingConstraints" />

        //

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toTopOf="@+id/bottom_navigation"
            app:layout_constraintTop_toBottomOf="@+id/tv_perfil_estabelecimento"
            app:layout_constraintVertical_bias="1.0"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="45dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="45dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_nome_do_negocio"
                    style="@style/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/nome_negocio" />

                <EditText
                    android:id="@+id/et_nome_do_negocio"
                    style="@style/editText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text" />


                <TextView
                    android:id="@+id/tv_cnpj"
                    style="@style/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/cnpj" />

                <EditText
                    android:id="@+id/et_cnpj"
                    style="@style/editText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number" />


                <TextView
                    android:id="@+id/tv_contato"
                    style="@style/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/contato" />

                <EditText
                    android:id="@+id/et_contato"
                    style="@style/editText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="phone" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Telefone com WhatsApp"
                    android:textSize="10dp" />


                <TextView
                    android:id="@+id/tv_logo"
                    style="@style/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/logo" />



                <androidx.cardview.widget.CardView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    app:cardBackgroundColor="#ff0000"
                    app:cardCornerRadius="60dp">

                    <ImageView
                        android:id="@+id/iv_dash_foto_perfil_estabelecimento"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/profile" />

                </androidx.cardview.widget.CardView>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:text="@string/opicional"
                    android:textSize="10dp" />

                <TextView
                    android:id="@+id/tv_biografia"
                    style="@style/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/biografia" />


                <EditText
                    android:id="@+id/et_biografia"
                    style="@style/editText"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="50dp"
                    android:background="@drawable/formato_edit_text"
                    android:gravity="top"
                    android:hint="Insira uma biografia"
                    android:inputType="textMultiLine"
                    android:padding="10dp"
                    android:scrollbars="vertical"
                    android:scrollHorizontally="false"
                    android:textSize="13dp" />


            </LinearLayout>

        </ScrollView>

    </LinearLayout>

    //////

    <LinearLayout
        android:id="@+id/container2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="70dp"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_perfil_adm"
            style="@style/textViewTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/formato_card_titulo_cadastro"
            android:drawableStart="@drawable/ic_person_white24"
            android:text="  Perfil Administrador"
            app:layout_constraintTop_toBottomOf="@+id/include2"
            tools:layout_editor_absoluteX="0dp"
            tools:ignore="MissingConstraints" />

        <ScrollView
            android:id="@+id/scrollView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toTopOf="@+id/bottom_navigation"
            app:layout_constraintTop_toBottomOf="@+id/tv_perfil_adm"
            tools:ignore="MissingConstraints">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="45dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="45dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_nome_do_adm"
                    style="@style/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/nome" />

                <EditText
                    android:id="@+id/et_nome_do_adm"
                    style="@style/editText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text" />


                <TextView
                    android:id="@+id/tv_data_nascimento"
                    style="@style/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/data_nascimento" />

                <EditText
                    android:id="@+id/et_data_nascimento"
                    style="@style/editText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableTint="@color/cinza_padrao"
                    android:inputType="date" />


                <TextView
                    android:id="@+id/tv_cpf"
                    style="@style/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/cpf" />

                <EditText
                    android:id="@+id/et_cpf"
                    style="@style/editText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number" />


                <TextView
                    android:id="@+id/tv_foto_adm"
                    style="@style/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/foto" />


                <androidx.cardview.widget.CardView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    app:cardBackgroundColor="#ff0000"
                    app:cardCornerRadius="60dp">

                    <ImageView
                        android:id="@+id/iv_dash_foto_perfil"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/profile" />

                </androidx.cardview.widget.CardView>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:text="@string/opicional"
                    android:textSize="10dp" />

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

    /////

    <LinearLayout
        android:id="@+id/container3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="70dp"
        android:orientation="vertical"
        android:visibility="gone">



    </LinearLayout>

    <RelativeLayout
        android:id="@+id/listagem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="bottom_navigation">

        <TextView
            android:id="@+id/arrow_back"
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:drawableStart="@drawable/ic_arrow_back_24" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:layout_margin="5dp"
                android:src="@drawable/ic_ellipse"
                app:tint="@color/cinza_padrao" />

            <ImageView
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:layout_margin="5dp"
                android:src="@drawable/ic_ellipse" />

            <ImageView
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:layout_margin="5dp"
                android:src="@drawable/ic_ellipse"
                app:tint="@color/cinza_padrao" />

            <ImageView
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:layout_margin="5dp"
                android:src="@drawable/ic_ellipse"
                app:tint="@color/cinza_padrao" />

            <ImageView
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:layout_margin="5dp"
                android:src="@drawable/ic_ellipse"
                app:tint="@color/cinza_padrao" />

            <ImageView
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:layout_margin="5dp"
                android:src="@drawable/ic_ellipse"
                app:tint="@color/cinza_padrao" />

            <ImageView
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:layout_margin="5dp"
                android:src="@drawable/ic_ellipse"
                app:tint="@color/cinza_padrao" />


        </LinearLayout>

        <TextView
            android:id="@+id/arrow_forward"
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:layout_alignParentEnd="true"
            android:drawableStart="@drawable/ic_arrow_forward_24" />

    </RelativeLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="402dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:labelVisibilityMode="unlabeled"
        app:menu="@menu/bottom_navigation_sem_cadastro"/>

</androidx.constraintlayout.widget.ConstraintLayout>
<!--            android:layout_height="match_parent"-->
<!--            android:orientation="vertical">-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic_rectangle_79" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/agendamentos"
                        android:layout_marginStart="55dp"
                        android:layout_marginTop="10dp"
                        android:textSize="12dp"/>

                    <TextView
                        android:layout_width="300dp"
                        android:layout_height="200dp"
                        android:layout_gravity="center"
                        android:background="@drawable/formato_retangulo_branco"
                        android:text="Não há nenhum agendamento"
                        android:gravity="center"/>

                </androidx.cardview.widget.CardView>

<!--                <LinearLayout-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="wrap_content">-->



<!--                </LinearLayout>-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="35dp"
                    android:layout_marginEnd="40dp"
                    android:layout_marginBottom="100dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/servicos"
                        android:fontFamily="sans-serif"/>

                    <HorizontalScrollView
                        android:id="@+id/cards_de_servicos"
                        android:layout_width="match_parent"
                        android:layout_height="210dp">

                        <LinearLayout
                            android:id="@+id/servicos"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:id="@+id/linear_card_cabelos"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginStart="7dp"
                                android:layout_marginTop="15dp">

                                <!--                            <ImageView-->
                                <!--                                android:layout_width="120dp"-->
                                <!--                                android:layout_height="138dp"-->
                                <!--                                android:src="@drawable/hair_servico"/>-->

                                <androidx.cardview.widget.CardView
                                    android:layout_width="wrap_content"
                                    android:layout_height="130dp">

                                    <ImageView
                                        android:layout_width="120dp"
                                        android:layout_height="138dp"
                                        android:background="@drawable/formato_retangulo_degrade"/>

                                    <ImageView
                                        android:layout_width="120dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="5dp"
                                        android:src="@drawable/cabelos_servico"/>
                                </androidx.cardview.widget.CardView>

                                <TextView
                                    android:layout_width="120dp"
                                    android:layout_height="30dp"
                                    android:text="Cabelos"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:background="@drawable/formato_borda_nome_servico"/>
                            </LinearLayout>


                            <LinearLayout
                                android:id="@+id/linear_card_maquiagem"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginTop="15dp"
                                android:layout_marginStart="25dp">

                                <!--                            <ImageView-->
                                <!--                                android:layout_width="150dp"-->
                                <!--                                android:layout_height="138dp"-->
                                <!--                                android:src="@drawable/make_servico"/>-->


                                <androidx.cardview.widget.CardView
                                    android:layout_width="wrap_content"
                                    android:layout_height="130dp">

                                    <ImageView
                                        android:layout_width="120dp"
                                        android:layout_height="138dp"
                                        android:background="@drawable/formato_retangulo_degrade"/>

                                    <ImageView
                                        android:layout_width="120dp"
                                        android:layout_height="126dp"
                                        android:layout_marginTop="5dp"
                                        android:scaleType="centerCrop"
                                        android:src="@drawable/make_servico"/>
                                </androidx.cardview.widget.CardView>

                                <TextView
                                    android:layout_width="120dp"
                                    android:layout_height="30dp"
                                    android:text="Maquiagem"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:background="@drawable/formato_borda_nome_servico"/>
                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginTop="15dp"
                                android:layout_marginStart="25dp">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="wrap_content"
                                    android:layout_height="130dp">

                                    <ImageView
                                        android:layout_width="120dp"
                                        android:layout_height="138dp"
                                        android:background="@drawable/formato_retangulo_degrade"/>

                                    <ImageView
                                        android:layout_width="120dp"
                                        android:layout_height="126dp"
                                        android:layout_marginTop="27dp"
                                        android:src="@drawable/unhas_servico"/>
                                </androidx.cardview.widget.CardView>

                                <!--                            <ImageView-->
                                <!--                                android:layout_width="120dp"-->
                                <!--                                android:layout_height="138dp"-->
                                <!--                                android:background="@drawable/formato_retangulo_degrade"/>-->

                                <TextView
                                    android:layout_width="120dp"
                                    android:layout_height="30dp"
                                    android:text="Unhas"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:background="@drawable/formato_borda_nome_servico"/>
                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginTop="15dp"
                                android:layout_marginStart="25dp">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="wrap_content"
                                    android:layout_height="130dp">

                                    <ImageView
                                        android:layout_width="120dp"
                                        android:layout_height="138dp"
                                        android:background="@drawable/formato_retangulo_degrade"/>

                                    <ImageView
                                        android:layout_width="120dp"
                                        android:layout_height="130dp"
                                        android:scaleType="centerCrop"
                                        android:src="@drawable/sobrancellhas_servico"/>
                                </androidx.cardview.widget.CardView>

                                <TextView
                                    android:layout_width="120dp"
                                    android:layout_height="30dp"
                                    android:text="Sobrancelhas"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:background="@drawable/formato_borda_nome_servico"/>
                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginTop="15dp"
                                android:layout_marginStart="25dp">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="wrap_content"
                                    android:layout_height="130dp">

                                    <ImageView
                                        android:layout_width="120dp"
                                        android:layout_height="138dp"
                                        android:background="@drawable/formato_retangulo_degrade"/>

                                    <ImageView
                                        android:layout_width="120dp"
                                        android:layout_height="wrap_content"
                                        android:scaleType="centerCrop"
                                        android:src="@drawable/barba_servico"/>
                                </androidx.cardview.widget.CardView>

                                <TextView
                                    android:layout_width="120dp"
                                    android:layout_height="30dp"
                                    android:text="Barba"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:background="@drawable/formato_borda_nome_servico"/>
                            </LinearLayout>

                        </LinearLayout>

                    </HorizontalScrollView>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sugestaoSaloes"
                        android:fontFamily="sans-serif"
                        android:layout_marginTop="25dp"/>

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="120dp">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp">

                            <androidx.cardview.widget.CardView
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_gravity="center"
                                app:cardBackgroundColor="#ff0000"
                                app:cardCornerRadius="60dp">

                                <ImageView
                                    android:id="@+id/imagem_salao1"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/ellipse70" />

                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_gravity="center"
                                app:cardBackgroundColor="#ff0000"
                                app:cardCornerRadius="60dp"
                                android:layout_marginStart="20dp">

                                <ImageView
                                    android:id="@+id/imagem_salao2"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/foto_salao_teste2"/>

                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_gravity="center"
                                app:cardBackgroundColor="#ff0000"
                                app:cardCornerRadius="60dp"
                                android:layout_marginStart="20dp">

                                <ImageView
                                    android:id="@+id/imagem_salao3"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/imagem_salao_teste4"/>

                            </androidx.cardview.widget.CardView>


                            <androidx.cardview.widget.CardView
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_gravity="center"
                                app:cardBackgroundColor="#ff0000"
                                app:cardCornerRadius="60dp"
                                android:layout_marginStart="20dp">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/imagens_salao_teste5"/>

                            </androidx.cardview.widget.CardView>



                            <androidx.cardview.widget.CardView
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_gravity="center"
                                app:cardBackgroundColor="#ff0000"
                                app:cardCornerRadius="60dp"
                                android:layout_marginStart="20dp">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/imagem_salao_teste3"/>

                            </androidx.cardview.widget.CardView>


                        </LinearLayout>


                    </HorizontalScrollView>

                </LinearLayout>

            </LinearLayout>


<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CadastroPerfilEstabelecimento"
    android:orientation="vertical">

    <include layout="@layout/topbar"/>


    <!--    <androidx.cardview.widget.CardView-->
    <!--        android:id="@+id/cardViewTitulo"-->
    <!--        android:layout_width="325dp"-->
    <!--        android:layout_height="43dp"-->
    <!--        android:layout_marginTop="40dp"-->

    <!--        android:background="@drawable/formato_card_titulo_cadastro">-->

    <!--    </androidx.cardview.widget.CardView>-->



    <TextView
        style="@style/textViewTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:drawableStart="@drawable/ic_regras_negocio"
        android:text="  Funcionamento"
        android:background="@drawable/formato_card_titulo_cadastro"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="45dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="45dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_nome_do_negocio"
            style="@style/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quais dias da semana o estabelecimento funciona?" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Domingo"
            android:textSize="13sp"
            android:layout_marginTop="10dp"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Segunda"
            android:textSize="13sp" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Terça"
            android:textSize="13sp" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Quarta"
            android:textSize="13sp" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Quinta"
            android:textSize="13sp" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Sexta"
            android:textSize="13sp" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Sábado"
            android:textSize="13sp" />


        <TextView
            style="@style/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tempo de intervalo entre os horários?" />


        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sim"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Não"/>

        <TextView
            style="@style/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quantos minutos?" />

        <EditText
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:background="@drawable/formato_edit_text"
            android:hint="Ex.: (10 min)"
            android:textSize="10dp"
            android:padding="10dp"
            android:layout_marginTop="10dp"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">

            <TextView
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:drawableStart="@drawable/ic_arrow_back_24" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="5dp"
                        android:layout_height="5dp"
                        android:layout_margin="5dp"
                        android:src="@drawable/ic_ellipse" />

                    <ImageView
                        android:layout_width="5dp"
                        android:layout_height="5dp"
                        android:layout_margin="5dp"
                        android:src="@drawable/ic_ellipse"
                        app:tint="@color/cinza_padrao" />

                    <ImageView
                        android:layout_width="5dp"
                        android:layout_height="5dp"
                        android:layout_margin="5dp"
                        android:src="@drawable/ic_ellipse"
                        app:tint="@color/cinza_padrao" />

                    <ImageView
                        android:layout_width="5dp"
                        android:layout_height="5dp"
                        android:layout_margin="5dp"
                        android:src="@drawable/ic_ellipse"
                        app:tint="@color/cinza_padrao" />

                    <ImageView
                        android:layout_width="5dp"
                        android:layout_height="5dp"
                        android:layout_margin="5dp"
                        android:src="@drawable/ic_ellipse"
                        app:tint="@color/cinza_padrao" />

                    <ImageView
                        android:layout_width="5dp"
                        android:layout_height="5dp"
                        android:layout_margin="5dp"
                        android:src="@drawable/ic_ellipse"
                        app:tint="@color/cinza_padrao" />

                    <ImageView
                        android:layout_width="5dp"
                        android:layout_height="5dp"
                        android:layout_margin="5dp"
                        android:src="@drawable/ic_ellipse"
                        app:tint="@color/cinza_padrao" />


                </LinearLayout>


            </RelativeLayout>


            <TextView
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:layout_alignParentEnd="true"
                android:drawableStart="@drawable/ic_arrow_forward_24" />


        </RelativeLayout>




    </LinearLayout>





</LinearLayout>
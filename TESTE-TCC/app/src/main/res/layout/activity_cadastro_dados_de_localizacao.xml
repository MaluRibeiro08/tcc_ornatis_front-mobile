<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CadastroPerfilEstabelecimento"
    android:orientation="vertical">

    <include layout="@layout/topbar"/>


    <!--    <androidx.cardview.widget.CardView-->
    <!--        android:id="@+id/cardViewTitulo"-->
    <!--        android:layout_width="325dp"-->
    <!--        android:layout_height="43dp"-->
    <!--        android:layout_marginTop="40dp"-->

    <!--        android:background="@drawable/formato_card_titulo_cadastro">-->

    <!--    </androidx.cardview.widget.CardView>-->



    <TextView
        style="@style/textViewTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:drawableStart="@drawable/ic_local"
        android:text="  Dados de Localização"
        android:background="@drawable/formato_card_titulo_cadastro"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="45dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="45dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_nome_do_negocio"
                style="@style/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CEP" />

            <EditText
                android:id="@+id/et_nome_do_negocio"
                style="@style/editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text" />


            <TextView
                android:id="@+id/tv_cnpj"
                style="@style/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bairro" />

            <EditText
                android:id="@+id/et_cnpj"
                style="@style/editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_rua"
                        style="@style/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rua" />



                    <TextView
                        android:id="@+id/tv_numero"
                        style="@style/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Número"
                        android:layout_marginStart="200dp"/>


                </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/et_rua"
                        style="@style/editText"
                        android:layout_width="210dp"
                        android:layout_height="wrap_content"
                        android:inputType="text" />

                    <EditText
                        android:id="@+id/et_numero"
                        style="@style/editText"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:layout_marginStart="10dp"/>
            </LinearLayout>



            <TextView
                style="@style/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Complemento" />

            <EditText
                style="@style/editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="phone" />

            <TextView
                style="@style/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cidade" />

            <EditText
                style="@style/editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="phone" />

            <TextView
                style="@style/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="UF" />

            <EditText
                style="@style/editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="phone" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp">

                <TextView
                    android:layout_width="21dp"
                    android:layout_height="21dp"
                    android:drawableStart="@drawable/ic_arrow_back_24" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="5dp"
                            android:layout_height="5dp"
                            android:layout_margin="5dp"
                            android:src="@drawable/ic_ellipse"
                            app:tint="@color/cinza_escuro" />

                        <ImageView
                            android:layout_width="5dp"
                            android:layout_height="5dp"
                            android:layout_margin="5dp"
                            android:src="@drawable/ic_ellipse"
                            app:tint="@color/cinza_escuro" />

                        <ImageView
                            android:layout_width="5dp"
                            android:layout_height="5dp"
                            android:layout_margin="5dp"
                            android:src="@drawable/ic_ellipse" />

                        <ImageView
                            android:layout_width="5dp"
                            android:layout_height="5dp"
                            android:layout_margin="5dp"
                            android:src="@drawable/ic_ellipse"
                            app:tint="@color/cinza_escuro" />

                        <ImageView
                            android:layout_width="5dp"
                            android:layout_height="5dp"
                            android:layout_margin="5dp"
                            android:src="@drawable/ic_ellipse"
                            app:tint="@color/cinza_escuro" />

                        <ImageView
                            android:layout_width="5dp"
                            android:layout_height="5dp"
                            android:layout_margin="5dp"
                            android:src="@drawable/ic_ellipse"
                            app:tint="@color/cinza_escuro" />

                        <ImageView
                            android:layout_width="5dp"
                            android:layout_height="5dp"
                            android:layout_margin="5dp"
                            android:src="@drawable/ic_ellipse"
                            app:tint="@color/cinza_escuro" />


                    </LinearLayout>


                </RelativeLayout>


                <TextView
                    android:layout_width="21dp"
                    android:layout_height="21dp"
                    android:layout_alignParentEnd="true"
                    android:drawableStart="@drawable/ic_arrow_forward_24" />


            </RelativeLayout>

        </LinearLayout>


    </ScrollView>


</LinearLayout>